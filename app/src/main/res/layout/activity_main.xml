<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rView"
    tools:context=".MainActivity">
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="565dp"
        android:layout_height="842dp"
        app:srcCompat="@drawable/pngtree_camouflage_gradient_background_color_mixing_apple_wind_image_34137__1_"
        tools:layout_editor_absoluteX="-53dp"
        tools:layout_editor_absoluteY="-62dp" />

    <Button
        android:id="@+id/buttonMain"
        android:layout_width="148dp"
        android:layout_height="155dp"
        android:shadowColor="#FFFFFF"
        app:cornerRadius="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.192" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="293dp"
        android:layout_height="277dp"
        android:columnCount="3"
        android:rowCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.68">

        <Button
            android:id="@+id/b1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginRight="10dp"
            android:onClick="clickListener"
            android:textSize="10sp"
            app:cornerRadius="100dp" />

        <Button
            android:id="@+id/b2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginRight="10dp"
            android:onClick="clickListener"
            android:textSize="10sp"
            app:cornerRadius="100dp" />

        <Button
            android:id="@+id/b3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="0"
            android:layout_column="2"
            android:onClick="clickListener"
            android:textSize="10sp"
            app:cornerRadius="100dp" />

        <Button
            android:id="@+id/b4"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="1"
            android:layout_column="0"
            android:onClick="clickListener"
            android:textSize="10sp"
            app:cornerRadius="100dp" />

        <Button
            android:id="@+id/b6"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="1"
            android:layout_column="2"
            android:onClick="clickListener"
            android:textSize="10sp"
            app:cornerRadius="100dp" />

        <Button
            android:id="@+id/b7"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="2"
            android:layout_column="0"
            android:onClick="clickListener"
            android:textSize="10sp"
            app:cornerRadius="100dp" />

        <Button
            android:id="@+id/b8"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="2"
            android:layout_column="1"
            android:onClick="clickListener"
            android:textSize="10sp"
            app:cornerRadius="100dp" />

        <Button
            android:id="@+id/b9"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="2"
            android:layout_column="2"
            android:onClick="clickListener"
            android:textSize="10sp"
            app:cornerRadius="100dp" />

        <Button
            android:id="@+id/b5"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="1"
            android:layout_column="1"
            android:onClick="clickListener"
            android:textSize="10sp"
            app:cornerRadius="100dp" />

    </GridLayout>

    <Button
        android:id="@+id/buttonStart"
        android:layout_width="153dp"
        android:layout_height="63dp"
        android:background="#FFFFFF"
        android:onClick="resetListener"
        android:text="Restart Game"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.891"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.059"
        app:rippleColor="@color/black" />

    <TextView
        android:id="@+id/currentScore"
        android:layout_width="165dp"
        android:layout_height="62dp"
        android:text="textView"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonStart"
        app:layout_constraintHorizontal_bias="0.569"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.08" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="391dp"
        android:layout_height="68dp"
        android:paddingLeft="70dp"
        android:text="TextView"
        android:textColorLink="#000000"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.903" />


</androidx.constraintlayout.widget.ConstraintLayout>